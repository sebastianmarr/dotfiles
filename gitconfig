[user]
	name = Sebastian Marr
[alias]
	a = add
	u = checkout
	c = commit
	s = status -sb
	b = branch
	work = config user.email "marr@spreadshirt.net"
	private = config user.email "mail@sebastianmarr.de"
	l = log --pretty='%C(yellow)%h%C(green)%d%Creset %s %C(red)(%cr) %C(bold blue)<%aN>%Creset'
	lg = log --pretty='%C(yellow)%h%C(green)%d%Creset %s %C(red)(%cr) %C(bold blue)<%aN>%Creset' --graph --all
	dt = difftool
	mt = mergetool
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
	editor = vim
[apply]
	whitespace = nowarn
[push]
	default = current
[help]
	autocorrect = 1
[clean]
	requireForce = false
[branch]
	autosetuprebase = always
