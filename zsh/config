# autoload all custom functions
fpath=(~/.zsh/functions $fpath)
autoload -U ~/.zsh/functions/*(:t)

# options
setopt prompt_subst
setopt correctall
setopt autocd

# source control info
autoload -Uz vcs_info
zstyle ':vcs_info:*' enable git # only git for the moment
zstyle ':vcs_info:git:*' check-for-changes true # dirty indicators
zstyle ':vcs_info:git:*' stagedstr '%F{2}● ' # staged changes in repo
zstyle ':vcs_info:git:*' unstagedstr '%F{2}○ ' # unstaged changes
zstyle ':vcs_info:git:*' formats '%u%c%F{red}[%F{green}%b%F{red}]%f' # git format

# run vcs_info before the prompt is displayed
precmd() {
  vcs_info
}

# environment variables
export EDITOR="mate -w"

# prompt
export PROMPT='%n@%m: %F{2}%3~ %F{1}$(prompt_symbol)%f '
export RPROMPT='${vcs_info_msg_0_}'

# history
HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000
