# autoload all custom functions
fpath=(~/.zsh/functions $fpath)
autoload -U ~/.zsh/functions/*(:t)

# options
setopt PROMPT_SUBST
unsetopt beep

# environment variables
export EDITOR="mate -w"
export PROMPT='%n@%m: %3~ $(prompt_symbol) '

# history
HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000
