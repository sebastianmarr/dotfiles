# general purpose
alias ls="ls -Gh"
alias ll="ls -l"
alias la="ls -lA"
alias x="exit"
alias aci="ack -i"
alias m="mate"
alias rmr="rm -rf"
alias c="cd"
alias o="open"
alias g="git"

# simple http server
alias serve="python -m SimpleHTTPServer"

# ruby and rails
alias rspec="rspec --color"

# commands starting with % for pasting from web
alias %=' '
